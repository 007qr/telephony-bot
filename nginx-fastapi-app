upstream app_server {
    server unix:/home/ubuntu/telephony-bot-gunicorn/run/gunicorn.sock fail_timeout=0;
}

server {
    listen 80;

    server_name 3.108.218.163;

    keepalive_timeout 5;
    client_max_body_size 4G;

    access_log /home/ubuntu/telephony-bot/logs/nginx-access.log;
    error_log /home/ubuntu/telephony-bot/logs/nginx-error.log;

    location / {
        gzip            on;
        gzip_buffers    8 256k;

        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
                        
        if (!-f $request_filename) {
            proxy_pass http://app_server;
            break;
        }
	}

    location /static {
        gzip            on;
        gzip_buffers    8 256k;

        alias /home/ubuntu/telephony-bot/static;
        expires 365d;
    }
}